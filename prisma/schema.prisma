// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("USER")
  teamId    String?
  team      MaintenanceTeam? @relation(fields: [teamId], references: [id], onDelete: SetNull)
  createdRequests MaintenanceRequest[] @relation("CreatedBy")
  assignedRequests MaintenanceRequest[] @relation("AssignedTechnician")
  notifications Notification[] @relation("UserNotifications")
  notificationPreferences NotificationPreference?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([teamId])
  @@index([role])
}

model MaintenanceTeam {
  id        String   @id @default(cuid())
  name      String   @unique
  members   User[]
  equipment Equipment[]
  requests  MaintenanceRequest[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Equipment {
  id                   String   @id @default(cuid())
  name                 String   @unique
  serialNumber         String   @unique
  department           String?
  assignedEmployee     String?
  physicalLocation     String?
  purchaseDate         DateTime?
  warrantyExpiry       DateTime?
  maintenanceTeamId    String
  maintenanceTeam      MaintenanceTeam @relation(fields: [maintenanceTeamId], references: [id], onDelete: Restrict)
  isScrapped           Boolean  @default(false)
  requests             MaintenanceRequest[]
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([maintenanceTeamId])
  @@index([isScrapped])
  @@index([maintenanceTeamId, isScrapped])
}

model MaintenanceRequest {
  id                   String   @id @default(cuid())
  subject              String
  equipmentId          String
  equipment            Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  maintenanceTeamId    String
  maintenanceTeam      MaintenanceTeam @relation(fields: [maintenanceTeamId], references: [id], onDelete: Restrict)
  technicianId         String?
  technician           User? @relation("AssignedTechnician", fields: [technicianId], references: [id], onDelete: SetNull)
  createdById          String
  createdBy            User @relation("CreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  requestType          String
  scheduledDate        DateTime?
  durationHours        Int?
  status               String @default("NEW")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([equipmentId])
  @@index([maintenanceTeamId])
  @@index([technicianId])
  @@index([createdById])
  @@index([status])
  @@index([scheduledDate])
  @@index([requestType])
  @@index([status, equipmentId])
  @@index([status, maintenanceTeamId])
  @@index([requestType, scheduledDate])
}

model Notification {
  id              String   @id @default(cuid())
  userId          String
  user            User @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  type            String   // "OVERDUE", "DUE_SOON", "COMPLETED", "ASSIGNED", "STATUS_CHANGE"
  title           String
  message         String
  relatedRequestId String?
  relatedEquipmentId String?
  read            Boolean  @default(false)
  readAt          DateTime?
  sentAt          DateTime @default(now())
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([read])
  @@index([type])
  @@index([userId, read])
  @@index([createdAt])
}

model NotificationPreference {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailOverdue        Boolean  @default(true)
  emailDueSoon        Boolean  @default(true)
  emailCompleted      Boolean  @default(true)
  emailAssigned       Boolean  @default(true)
  pushNotifications   Boolean  @default(true)
  inAppNotifications  Boolean  @default(true)
  notificationFrequency String  @default("IMMEDIATE") // IMMEDIATE, DAILY, WEEKLY
  quietHoursStart     String?  // "18:00"
  quietHoursEnd       String?  // "08:00"
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
